<LinearLayout
    android:id="@+id/tinker_select"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/tinker_selection_overlay_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tinker_select_pin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="D0"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tinker_button_analog_read"
            style="@style/TinkerSelectButtonBg"
            android:layout_marginRight="1dp">

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/emerald"/>

            <TextView
                style="@style/TinkerSelectButton"
                android:text="analogRead"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tinker_button_digital_read"
            style="@style/TinkerSelectButtonBg">

            <TextView
                style="@style/TinkerSelectButton"
                android:text="digitalRead"/>

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/cyan"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tinker_button_analog_write"
            style="@style/TinkerSelectButtonBg"
            android:layout_marginRight="1dp">

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/sunflower"/>

            <TextView
                style="@style/TinkerSelectButton"
                android:text="analogWrite"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tinker_button_digital_write"
            style="@style/TinkerSelectButtonBg">

            <TextView
                style="@style/TinkerSelectButton"
                android:text="digitalWrite"/>

            <View
                android:id="@id/tinker_button_color"
                style="@style/TinkerSelectColorBox"
                android:background="@color/alizarin"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- </RelativeLayout> -->
